 		led-2 {
-			function = LED_FUNCTION_WAN;
-			color = <LED_COLOR_ID_GREEN>;
 			gpios = <&gpio2 RK_PC2 GPIO_ACTIVE_HIGH>;
+			label = "green:wan";
 		};
 	};
 
